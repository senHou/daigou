<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />

    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="index" />

        <action name="index">
            <result>index.jsp</result>
        </action>
        
        
        <action name="printItemOptions" class="action.ItemAction" method="printOptions">
        </action>
        
        <action name="initAddItem" class="action.ItemAction" method="initAdd">
        	<result name="success">/item/itemNew.jsp</result>
        	<result name="error">error.jsp</result>				   
        </action>
        
       	<action name="addItem" class="action.ItemAction" method="add">
        	<result name="success">/item/itemNew.jsp</result>
        	<result name="error" type="redirectAction">
        		<param name="actionName">initAddItem</param>
         		<param name="errorMessage">Add Shipping Error</param>
        	</result>				   
        </action>
        
        <action name="initAddShipping" class="action.ShippingAction" method="initAdd">
        	<result name="success">/shipping/shippingNew.jsp</result>
        	<result name="error">error.jsp</result>				   
        </action>
        
       	<action name="addShipping" class="action.ShippingAction" method="add">
        	<result name="success">/shipping/shippingNew.jsp</result>
        	<result name="error" type="redirectAction">
        		<param name="actionName">initAddShipping</param>
         		<param name="errorMessage">Add Shipping Error</param>
        	</result>				   
        </action>
        
        <action name="shippingDisplay" class="action.ShippingAction" method="display">
        	<result name="success">/shipping/display.jsp</result>
        	<result name="error">error.jsp</result>	
        </action>
        
        <action name="initAddWeekOrderDetail" class = "action.WeekOrderDetailAction" method="initAdd">
        	<result>/weekOrderDetail/weekOrderDetailNew.jsp</result>
        </action>
         <action name="addWeekOrderDetail" class = "action.WeekOrderDetailAction" method="add">
        	<result name="success">/weekOrderDetail/weekOrderDetail.jsp</result>
        	<result name="error">/weekOrderDetail/weekOrderDetailNew.jsp</result>
        </action>
        
        <action name="initAddBrand" class = "action.BrandAction" method="initAdd">
        	<result>/brand/brandNew.jsp</result>
        </action>
        
        <action name="addBrand" class = "action.BrandAction" method="add">
        	<result name="success">/brand/brandNew.jsp</result>
        	<result name="error">/brand/brandNew.jsp</result>
        </action>
        
        <action name="initUploadBrandFile" class="action.BrandAction" method="initFile">
        	<result>/brand/upload.jsp</result>
        </action>
        
        <action name="uploadBrandFile" class = "action.BrandAction" method="uploadFile">
        </action>
        
        
        
        <action name="initAddCustomer" class = "action.CustomerAction" method="initAdd">
        	<result>/customer/customerNew.jsp</result>
        </action>
        
        <action name="addCustomer" class = "action.CustomerAction" method="add">
        	<result name="success">/customer/customerNew.jsp</result>
        	<result name="error">/customer/customerNew.jsp</result>
        </action>
        <action name="initUploadCustomerFile" class="action.CustomerAction" method="initFile">
        	<result>/customer/upload.jsp</result>
        </action>
        <action name="uploadCustomerFile" class = "action.CustomerAction" method="uploadFile" >
        </action>
        
    </package>


    <!-- Add packages here -->

</struts>
